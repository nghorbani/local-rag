# Local-RAG Environment Configuration

# OCR Configuration
OCR_MODEL_NAME=qwen2.5-vl:3b  # Ollama model for OCR
OCR_API_URL=http://localhost:11434/api/generate  # Ollama API endpoint

# Embedding Configuration
EMBED_MODEL_NAME=arctic-embed2  # Snowflake Arctic Embed2 model
EMBED_API_URL=http://localhost:11434/api/embeddings  # Ollama API endpoint
EMBED_BATCH_SIZE=32  # Number of chunks to embed in a single batch

# Chat Configuration
CHAT_MODEL_NAME=deepseek-r1:1.5b  # DeepSeek-R1 model
CHAT_API_URL=http://localhost:11434/api/chat  # Ollama API endpoint

# PostgreSQL Configuration
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres
PG_DATABASE=local_rag

# Application Configuration
APP_HOST=localhost
APP_PORT=5000
DOC_ROOT=/path/to/documents  # Root directory for document storage

# HNSW Index Configuration
HNSW_M=16  # Number of connections per element
HNSW_EF_CONSTRUCTION=64  # Size of the dynamic list for the nearest neighbors
